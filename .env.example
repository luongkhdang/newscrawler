# Database Configuration
DATABASE_URL=postgresql://newscrawler:newscrawler_password@localhost:5432/newscrawler

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
ENVIRONMENT=development

# Embedding Model Configuration
EMBEDDING_MODEL_TYPE=huggingface  # Options: huggingface, openai
HUGGINGFACE_MODEL_NAME=sentence-transformers/all-mpnet-base-v2
OPENAI_API_KEY=your_openai_api_key_here

# Crawler Configuration
CRAWL_INTERVAL=3600  # in seconds
MAX_CONCURRENT_CRAWLS=5
CRAWL_DELAY=5  # in seconds
USER_AGENT=NewsCrawler/1.0

# Security
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # in seconds 